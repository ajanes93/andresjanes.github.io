{
    "name": "vue3-ts",
    "version": "0.5.0",
    "scripts": {
        "prepare": "husky install && cp -a .husky/. .git/hooks/",
        "build": "vue-tsc --noEmit && vite build",
        "dev": "vite",
        "preview": "vite preview",
        "lint": "eslint --ext .js,.vue --ignore-path .gitignore --fix src",
        "format": "prettier . --ignore-path .gitignore --write",
        "test": "vitest run --reporter=junit --outputFile=junit.xml --coverage",
        "test:watch": "vitest"
    },
    "dependencies": {
        "@mdi/js": "^6.5.95",
        "date-fns": "^2.28.0",
        "vue": "^3.2.25",
        "vuex": "^4.0.2"
    },
    "devDependencies": {
        "@tailwindcss/typography": "^0.5.1",
        "@testing-library/vue": "^6.4.2",
        "@typescript-eslint/eslint-plugin": "^5.11.0",
        "@typescript-eslint/parser": "^5.11.0",
        "@vitejs/plugin-vue": "^2.0.0",
        "autoprefixer": "^10.4.2",
        "c8": "^7.11.0",
        "eslint": "^8.8.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-vue": "^8.4.1",
        "happy-dom": "^2.31.1",
        "husky": "^7.0.4",
        "lint-staged": "^12.3.4",
        "postcss": "^8.4.6",
        "prettier": "2.5.1",
        "tailwindcss": "^3.0.19",
        "typescript": "^4.4.4",
        "vite": "^2.7.2",
        "vitest": "^0.3.2",
        "vue-tsc": "^0.29.8"
    },
    "lint-staged": {
        "*": "prettier . --ignore-path .gitignore --ignore-unknown --write",
        "src/**/*.{js,ts,vue}": "eslint --ignore-path .gitignore --fix src/"
    }
}
